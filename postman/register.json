				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse expected values từ CSV\r",
							"let expectedStatus = parseInt(data.expected_status);\r",
							"let expectedError = data.expected_errors;\r",
							"\r",
							"// Kiểm tra status code\r",
							"pm.test(\"Status code phải bằng \" + expectedStatus, function () {\r",
							"    pm.response.to.have.status(expectedStatus);\r",
							"});\r",
							"\r",
							"// Nếu là lỗi validation (422 hoặc 400) thì kiểm tra field lỗi\r",
							"if (expectedStatus === 422 || expectedStatus === 400) {\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.test(\"Phản hồi phải có lỗi cho field: \" + expectedError, function () {\r",
							"        pm.expect(JSON.stringify(jsonData)).to.include(expectedError);\r",
							"    });\r",
							"}\r",
							"\r",
							"// Nếu là success (201) thì kiểm tra có id và email\r",
							"if (expectedStatus === 201) {\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.test(\"Phải trả về id\", function () {\r",
							"        pm.expect(jsonData).to.have.property(\"id\");\r",
							"    });\r",
							"    pm.test(\"Email khớp\", function () {\r",
							"        pm.expect(jsonData.email).to.eql(data.email);\r",
							"    });\r",
							"}\r",
							""
						],
